@{
}

@{
    ViewData["Title"] = "Historial";
}



<div class="row">
    <div class="container">
        <div class="row">
            <div class="title">
                <h3>Historial de Consultas</h3>
            </div>
        </div>
        <div class="col-md-12 mt-5">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Fecha Consulta</th>
                        <th>RNC</th>
                        <th>Placa</th>
                        <th>Marca</th>
                        <th>Modelo</th>
                        <th>Color</th>
                        <th>Año</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        if (ViewBag.PlacasHistory is not null)
                        {
                            var placasHistory = ViewBag.PlacasHistory as List<PlacasResultHistory>;
                            foreach (var result in placasHistory)
                            {
                                        <tr>
                                            <td>@result.Id</td>
                                            <td>@result.FechaCreacion</td>
                                            <td>@result.RncCedulaPropietario</td>
                                            <td>@result.Placa</td>
                                            <td>@result.MarcaVehiculo</td>
                                            <td>@result.ModeloVehiculo</td>
                                            <td>@result.Color</td>
                                            <td>@result.AnioFabricacion</td>
                                        </tr>
                            }

                        }
                    }

                </tbody>
            </table>
        </div>
    </div>

</div>