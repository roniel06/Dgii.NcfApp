@{
}

@{
    ViewData["Title"] = "Historial";
}



<div class="row">
    <div class="container">
        <div class="row">
            <div class="title">
                <h3>Historial de Consultas</h3>
            </div>
        </div>
        <div class="col-md-12 mt-5">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Fecha Consulta</th>
                        <th>RNC</th>
                        <th>NCF</th>
                        <th>Razon Social / Nombre Comercial</th>
                        <th>Comprobante</th>
                        <th>Estado</th>
                        <th>Fecha Vigencia</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        if (ViewBag.History is not null)
                        {
                            foreach (var result in ViewBag.History)
                            {
                                <tr>
                                    <td>@result.Id</td>
                                    <td>@result.FechaCreacion</td>
                                    <td>@result.Rnc</td>
                                    <td>@result.Ncf</td>
                                    <td>@result.Nombre</td>
                                    <td>@result.Comprobante</td>
                                    <td>@result.Estado</td>
                                    <td>@result.FechaVigencia</td>
                                </tr>
                            }

                        }
                    }

                </tbody>
            </table>
        </div>
    </div>

</div>